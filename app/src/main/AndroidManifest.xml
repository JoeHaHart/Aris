<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hart.aris.app" >

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />
    <!-- Required to access the Contacts Provider and user profile -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hart.aris.app.ProjectCheck"
            android:label="@string/title_activity_revision_check" >
        </activity>
        <activity
            android:name="com.hart.aris.app.InterventionActivity"
            android:label="@string/title_activity_intervention" >
        </activity>
        <activity
            android:name="com.hart.aris.app.WelcomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.hart.aris.app.PastPaperCheckActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.hart.aris.app.StarterActivity"
            android:label="Aris" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.hart.aris.app.NotificationService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <receiver
            android:name="com.hart.aris.app.CheckReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>
    </application>

</manifest>
